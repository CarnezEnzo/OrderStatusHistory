<?xml version="1.0" encoding="UTF-8" ?>

<config xmlns="http://thelia.net/schema/dic/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://thelia.net/schema/dic/config http://thelia.net/schema/dic/config/thelia-1.0.xsd">

    <loops>
        <loop name="order-status-history" class="OrderStatusHistory\Loop\OrderStatusHistory" />
    </loops>

    <services>
        <service id="orderstatushistory.event_manager" class="OrderStatusHistory\EventListeners\EventManager">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>

    <hooks>
        <hook id="orderstatushistory.hook" class="OrderStatusHistory\Hook\HookManager">
            <tag name="hook.event_listener" event="order-edit.cart-bottom" type="back" />
        </hook>
    </hooks>
</config>
